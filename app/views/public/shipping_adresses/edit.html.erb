<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mt-3"><strong>配送先編集</strong></h1>
            <%= form_with model: @shipping_adress, url: public_shipping_adress_path, method: :patch do |f| %>

            <table>
                <tbody>
                    <tr>
                        <td><%= f.label :post_code, "郵便番号", class: "mr-3"%></td>
                        <td><%= f.text_field :post_code, class: "form-control" %></td>
                    </tr>
                    <tr>
                        <td><%= f.label :adress, "住所", class: "mr-3"%></td>
                        <td><%= f.text_field :adress, class: "form-control" %></td>
                    </tr>
                    <tr>
                        <td><%= f.label :adress_name, "宛名", class: "mr-3"%></td>
                        <td><%= f.text_field :adress_name, class: "form-control mr-3" %></td>
                        <td><%= f.submit "編集する" %></td>
                    </tr>
                </tbody>
            </table>
            <% end %>

        </div>
    </div>
</div>


