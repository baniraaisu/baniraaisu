<%= image_tag @item.get_image(200,200) %>

<h1><%= @item.name %></h1>
<p><%= @item.introduction %></p>

<p>￥<%= @item.after_tax_on_price.round %>(税込)</p>


<% if @item.selling_status == TRUE %>
 <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
  <% f.label :number, "個数" %>
    <%= f.select :number, [["1個",1],["2個",2],["3個",3],["4個",4],["5個",5],["6個",6],["7個",7],["8個",8],["9個",9]] %>
   <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.submit "カートに入れる" %>
 <% end %>
<% end %>