<div class="container">
  <div class="row">


    <div class="col-9 mt-4">

      <table>
        <thead>
          <tr>
            <td><h1><strong>商品一覧</strong><span class="font">(全<%= @total_items%>件)</span></h1></td>
          </tr>
        </thead>
        <% @items.each do |item| %>
          <tbody class="mb-3">
            <tr>
              <td>
                <%= link_to public_item_path(item) do %>
                  <%= image_tag item.get_image(200,200)%>
                <% end %>
              </td>
              <td><%= item.name%></td>
              <td><p><%= item.after_tax_on_price.round %>円</p></td>
            </tr>
          </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>