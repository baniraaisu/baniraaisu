<div class="container">
  <div class="row">
    <div class='col-md-12'>
      <div class="row">
       <div class="col-md-8 mx-auto">
  <h1><strong><i class="fa-regular fa-chess-queen"></i>マイページ</strong></h1><br>

    <div class="row">
     <h3 class="col-8">　登録情報</h3>
     <div class="col-4">
    　 <%= link_to edit_public_customer_path(@customer), class:"btn btn-outline-success" do %>
    　 <i class="fa-solid fa-pen-to-square"></i>
    　 <% end %>
     </div>
    </div>

    <table class="table border">
      <thead>

        <tr>
          <th class="border-right">氏名</th>
          <th>
            <%= @customer.first_name %>&ensp;<%= @customer.last_name %>
          </th>
        </tr>

        <tr>
          <th class="border-right">カナ</th>
          <th>
            <%= @customer.first_name_kana %>&ensp;<%= @customer.last_name_kana %>
          </th>
        </tr>

        <tr>
          <th class="border-right">郵便番号</th>
          <th><%= @customer.post_code %></th>
        </tr>

      　<tr>
          <th class="border-right">住所</th>
          <th><%= @customer.adress %></th>
        </tr>

        <tr>
          <th class="border-right">電話番号</th>
          <th><%= @customer.tel_number %></th>
        </tr>

        <tr>
          <th class="border-right">メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>

      </thead>
    </table>




   <div class="row">
        <h3 class="col-8">　配送先</h3>
        <div class="col-4">
        　&ensp;&ensp;<%= link_to "一覧を見る",  public_shipping_adresses_path, class:"btn btn btn-info" %>
        </div>
   </div>


   <div class="row">
  　     <h3 class="col-8 mt-4">&ensp;注文履歴</h3>
        <div class="col-3 mt-4">
        　<%= link_to "一覧を見る",  public_orders_path, class:"btn btn btn-info" %>
        </div>
   </div>



      </div>
     </div>

    </div>
  </div>
</div>
