<div class="container">
  <div class="row">
    <div class="col-9 mt-4 mb-3">
      <h1><strong>商品一覧</strong></h1>
    </div>

    <!--新規の商品登録とジャンル登録-->
    <div class="col-3 mt-4 d-flex flex-row">
          <%= link_to new_admin_item_path do %>
            <!--<i class="fa-solid fa-cake-candles fa-3x new m-3"></i>-->
            <p class="btn btn-outline-danger mr-3">new item</p>
          <% end %>

          <%= link_to admin_genres_path do %>
            <!--<i class="fa-solid fa-circle-plus fa-3x new m-3"></i>-->
            <p class="btn btn-outline-danger">new genre</p>
          <% end %>
    </div>

  </div>

  <div class"row">
    <div class="col-12">
      <table class="table">
        <thead class="thead">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.tax_off_price %></td>
              <td><%= item.genre.name %></td>
              <% if item.selling_status == true %>
                <td>販売中</td>
              <% else %>
                <td>売切れ</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


  <div class="row">
    <div class="col-12 d-flex justify-content-center  mt-5 ">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li><%= paginate @items, theme: 'bootstrap-5' %></li>
        </ul>
      </nav>
    </div>
  </div>


</div>

