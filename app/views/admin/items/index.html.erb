<div class="container">
  <div class="row">
    <div class="col-10 mt-4">
      <h1><strong>商品一覧</strong></h1>
    </div>
    <div class="col-2">
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-3x new"></i>
      <% end %>
    </div>
  </div>

  <div class"row">
    <div class="col-3"></div>
    <div class="col-8">
      <table class="table">
        <thead class="thead">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.tax_off_price %></td>
              <td><%= item.genre.name %></td>
              <% if item.selling_status == true %>
                <td>販売中</td>
              <% else %>
                <td>売切れ</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
      <div class="col ">
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <li><%= paginate @items %></li>
          </ul>
        </nav>
      </div>
  </div>


</div>

