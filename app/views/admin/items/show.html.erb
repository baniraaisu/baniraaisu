<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-7 mt-5">
      <h1>商品詳細</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-4">
      <div class="card">
        <%= image_tag @item.get_image(500,500), class: "card-img-top" %>
        <div class="card-body">
          <h4 class="card-title">商品名：<%= @item.name %></h4>
          <p class="card-text">
          　商品説明<br>
          　<%= @item.introduction %><br>
          　ジャンル：<%= @item.genre.name %><br>
          　税込価格(税抜価格)：<%= @item.after_tax_on_price.round %>(<%= @item.tax_off_price %>)円<br>
          　販売ステータス:
          　<% if @item.selling_status == true %>
              販売中<br>
            <% else %>
              売切れ<br>
            <% end %>
          </p>
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary"%>
        </div>
      </div>

    </div>
  </div>
</div>






