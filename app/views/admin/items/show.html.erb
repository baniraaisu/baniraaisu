<table>
  <thead>
    <th><p>商品詳細</p></th>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @item.get_image %></td>
    </tr>
    <tr>
      <td><p>商品名</p></td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td><p>商品説明</p></td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td><p>ジャンル</p></td>
      <td><%= @item.genre %></td>
    </tr>
    <tr>
      <td><p>販売ステータス</p></td>
      <td>
        <% if @item.selling_status == true %>
          <p>販売中</p>
        <% else %>
          <p>売切れ</p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>