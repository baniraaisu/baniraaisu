<div class="container">

  <div class="row">
    <div class="header col-8 mb-3 mt-3">
      <h1><strong>ジャンル一覧・追加</strong></h1>
      <%= render "layouts/error", obj: @genre %>
    </div>
    <div class="col-3 mt-4 d-flex flex-row">
      <%= link_to new_admin_item_path do %>
        <!--<i class="fa-solid fa-cake-candles fa-3x new m-3"></i>-->
        <p class="btn btn-outline-danger mr-3">new item</p>
      <% end %>

      <%= link_to admin_genres_path do %>
        <!--<i class="fa-solid fa-circle-plus fa-3x new m-3"></i>-->
        <p class="btn btn-outline-danger">new genre</p>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">

    <div class="col-2"></div>

    <div class="col-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group">
          <h4><%= f.label :name, "新規ジャンル名" ,class: "mb-2"%></h4>
          <%= f.text_field :name, placeholder: "新規ジャンル名", class: "form-control w-50 p-3 mb-3" %>
        </div>
        <%= f.submit "新規登録" ,class: "btn btn-primary" %>
      <% end %>
    </div>

      <div class="col-3">
        <table>
          <thead>
            <th><h4>ジャンル一覧</h4></th>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

  </div>
</div>
