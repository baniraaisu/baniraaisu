<div class="container">
  <div class="row">

    <div class="col-8 mt-4 mb-4">
      <h1>ジャンル編集</h1>
    </div>
    <!--新規の商品登録とジャンル登録-->
    <div class="col-4 mt-4 d-flex flex-row">
          <%= link_to new_admin_item_path do %>
            <!--<i class="fa-solid fa-cake-candles fa-3x new m-3"></i>-->
            <p class="btn btn-outline-danger mr-3">new item</p>
          <% end %>

          <%= link_to admin_genres_path do %>
            <!--<i class="fa-solid fa-circle-plus fa-3x new m-3"></i>-->
            <p class="btn btn-outline-danger">new genre</p>
          <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 ">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <p><%= f.label :name, "ジャンル名" %></p>
        <%= f.text_field :name, placeholder: "genre.name", class: "form-control" %>
        <div class="input-group-append">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>



</div>