<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>


    <%= render 'layouts/error', obj: @customer %>
    <div class="head mt-4 mb-3">
       <h2><strong><%= @customer.first_name %><%= @customer.last_name %>さんの登録情報編集</strong></h2>
    </div>

 <div class"row">
   <div class="col-12 mt-4">
    <%= form_with model:@customer, url:admin_customer_path do |f| %>
       <div>
            <%= f.label :"会員ID　　　　　　" %>
            <%= @customer.id %>
       </div>
       <div class="form-group">
            <%= f.label :"氏名　　　　　　　" %>
            <%= f.text_field :first_name %>
            <%= f.text_field :last_name %>
       </div>
       <div class="form-group">
            <%= f.label :"フリガナ　　　　　" %>
            <%= f.text_field :first_name_kana %>
            <%= f.text_field :last_name_kana %>
       </div>
       <div class="form-group">
            <%= f.label :"郵便番号　　　　　" %>
            <%= f.text_field :post_code %>
       </div>
       <div class="form-group">
            <%= f.label :"住所　　　　　　　" %>
            <%= f.text_field :adress %>
       </div>
       <div class="form-group">
            <%= f.label :"電話番号　　　　　" %>
            <%= f.text_field :tel_number %>
       </div>
       <div class="form-group">
            <%= f.label :"メールアドレス　　" %>
            <%= f.email_field :email %>
       </div>
       <div class="form-group">
            <%= f.label :"会員ステータス　　" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会",{value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効",{value: :false, style: "display: inline-block;"} %>
       </div>


  <div class"row">

     <div class="col mt-4 text-right">
          <%= f.submit "編集内容を保存", class:"btn btn-success" %>
           <% end %>
     </div>
     <div>
         &ensp;&ensp;<%= link_to admin_customers_path, class:"btn btn-outline-info" do %>
           <i class="fa-solid fa-arrow-left"></i>
         <% end %>
     </div>
  </div>




       </div>
     </div>
   </div>
  </div>
</div>