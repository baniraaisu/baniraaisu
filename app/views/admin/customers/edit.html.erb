<%= render 'layouts/error', obj: @customer %>
<div class="head">
   <h2><%= @customer.first_name %><%= @customer.last_name %>さんの登録情報編集</h2>
</div>

<%= form_with model:@customer, url:admin_customer_path do |f| %>
   <div>
        <%= f.label :"会員ID" %>
        <%= @customer.id %>
   </div>
   <div class="form-group">
        <%= f.label :"氏名" %>
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
   </div>
   <div class="form-group">
        <%= f.label :"フリガナ" %>
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
   </div>
   <div class="form-group">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :post_code %>
   </div>
   <div class="form-group">
        <%= f.label :"住所" %>
        <%= f.text_field :adress %>
   </div>
   <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_field :tel_number %>
   </div>
   <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email %>
   </div>
   <div class="form-group">
        <%= f.label :"会員ステータス" %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会",{value: :true, style: "display: inline-block;"}  %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効",{value: :false, style: "display: inline-block;"} %>
   </div>
    <%= f.submit "編集内容を保存" %>
<% end %>
   <%= link_to "戻る",  admin_customers_path %>
