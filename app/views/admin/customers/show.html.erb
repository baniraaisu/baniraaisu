<div class="container">
  <div class="row">
    <div class='col-md-12'>
      <div class="row">
       <div class="col-md-8 mx-auto">

  <div class="head">
  <br> <h2><strong><%= @customer.first_name %><%= @customer.last_name %>さんの登録情報</strong></h2>
  </div>

  <table class="table">
    <thead>

      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>

      <tr>
        <th>氏名</th>
        <th>
          <%= @customer.first_name %>&ensp;<%= @customer.last_name %>
        </th>
      </tr>

      <tr>
        <th>カナ</th>
        <th>
          <%= @customer.first_name_kana %>&ensp;<%= @customer.last_name_kana %>
        </th>
      </tr>

      <tr>
        <th>郵便番号</th>
        <th><%= @customer.post_code %></th>
      </tr>

    　<tr>
        <th>住所</th>
        <th><%= @customer.adress %></th>
      </tr>

      <tr>
        <th>電話番号</th>
        <th><%= @customer.tel_number %></th>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>

      <tr>
        <th>会員ステータス</th>
        <% if @customer.is_deleted == true %>
                <th class="text-danger">退会</th>
              <% else %>
                <th class="text-success">有効</th>
              <% end %>
      </tr>
    </thead>
  </table>

   <div class="row">
     <div class="col-8">
      　<%= link_to edit_admin_customer_path, class:"btn btn-outline-success" do %>
      　<i class="fa-solid fa-pen-to-square"></i>
      　<% end %>
     </div>
     <div class="col-4">
    　<%= link_to "注文履歴一覧を見る", admin_order_path, class:"btn btn-info" %>
     </div>
   </div>

  　 </div>
   </div>
  </div>
 </div>
</div>
