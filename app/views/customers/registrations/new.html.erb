<div class='container'>
  <div class=“row”>

  <h2><strong>新規会員登録</storng></h2>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render 'layouts/error', obj: resource %>

　　<div class="field">
  　 <%= f.label :first_name, "名前　　　　　　　　（姓)" %>
  　 <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  　 <%= f.label :last_name, "　(名)" %>
  　 <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  　</div><br>

  　<div class="field">
  　  <%= f.label :first_name_kana, "フリガナ　　　　　（セイ)   " %>
  　  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  　  <%= f.label :last_name_kana, "(メイ)" %>
  　  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  　</div><br>

    <div class="field">
      <%= f.label :email,"メールアドレス　　　　　　　　" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>

    <div class="field">
      <%= f.label :post_code,"郵便番号（ハイフンなし）　　　" %>
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div><br>

    <div class="field">
      <%= f.label :adress,"住所　　　　　　　　　　　　　" %>
      <%= f.text_field :adress, autofocus: true, autocomplete: "adress" %>
    </div><br>

    <div class="field">
      <%= f.label :tel_number,"電話番号（ハイフンなし）　　　" %>
      <%= f.text_field :tel_number, autofocus: true, autocomplete: "tel_number" %>
    </div><br>

    <div class="field">
      <%= f.label :password,"パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)　　　　</em>
      <% end %>

      <%= f.password_field :password, autocomplete: "new-password" %>
    </div><br>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）　　　　　" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div><br>
  </div>


  <div class="row mb-4">
    <div class="col-8 text-center">
      <%= f.submit "新規登録", class: "btn btn-outline-info btn-block"%>
    </div>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
  <%= link_to "こちら",  new_customer_session_path %><span>からログインしてください</span>

</div>


